@model ASPMVCCrud.Models.Task

@{
    ViewBag.Title = "Create Task";
}

    <form asp-controller="Task" asp-action="Create" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label" ></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Status" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Status" class="form-control" placeholder="Status" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            </div>
        <div class="form-group row">
            <label asp-for="Priority" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Priority" class="form-control" placeholder="Priority" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            </div>
            <div>
                <button type="submit">Create</button>
            </div>
</form>